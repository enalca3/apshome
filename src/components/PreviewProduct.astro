---
const { product } = Astro.props;
---

<div class="group relative border bg-white rounded-xl overflow-hidden border-gray-200">
    <a href={`/products/${product.id}`} class="absolute inset-0 w-full h-full block z-10"></a>
    
    <div class="aspect-[16/9] overflow-hidden bg-gray-100">
        <img src=`${product.mainImage}` alt=`${product.name}` class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-300 ease-in-out" loading="lazy" />
    </div> 
    
    <div class="p-4">
        <div class="flex items-center justify-between space-x-8 text-base font-medium text-black">
            <span class="text-sm font-semibold text-gray-900">{product.name}</span>
            <span class="text-sm font-semibold text-gray-900">{product.price} â‚¬</span>
        </div>
    </div>
    
</div>