---
import Layout from "@/layouts/Layout.astro";
import { Button } from "@/components/ui/button";
---


<Layout>
    <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; md:pt-20 height: 80vh; animation: fadeIn 1s ease-in;">
        <img 
          loading="lazy" 
          src="https://media.giphy.com/media/3oriO0OEd9QIDdllqo/giphy.gif" 
          alt="Gato confundido" 
          style="width: 300px; margin-bottom: 2rem; border-radius: 16px;" 
        />
        <h1 style="font-size: 6rem; color: #ff4d4d;">404</h1>
        <p style="font-size: 1.8rem; margin-bottom: 2rem;">¡Ups! Parece que esta página no existe.</p>
        <a href="/" style="background: linear-gradient(to right, #667eea, #764ba2); color: white; padding: 1rem 2rem; border-radius: 12px; text-decoration: none; font-size: 1.2rem; transition: 0.3s;">
          Volver al inicio
        </a>
      </div>
    
      <style>
        @keyframes fadeIn {
          from { opacity: 0; transform: translateY(-20px); }
          to { opacity: 1; transform: translateY(0); }
        }
    
        a:hover {
          background: linear-gradient(to right, #764ba2, #667eea);
          transform: scale(1.05);
        }
      </style>
</Layout>
